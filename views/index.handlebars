<div class="mt-5 d-flex flex-column align-items-center">
  <h1>Account Login</h1>
  <form action="/" method="post">
    <div class="d-flex flex-column align-items-center">
      <input type="email" placeholder="Email" name="email" id="email" class="mt-3 w-100" style="display: block;" required>
      <input type="password" placeholder="Password" name="password" id="password" class="mt-3 mb-2" style="display: block;" required>
      <button type="submit" class="btn btn-outline-secondary mt-5" style="display: block;">Sign in</button>
    </div>
  </form>
</div>