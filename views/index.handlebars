<div class="mt-5 d-flex flex-column align-items-center">
  <h1>Account Login</h1>
  <form action="/" method="post">
    <div class="d-flex flex-column align-items-center">
      <input type="email" placeholder="Email" name="email" id="email" class="mt-3 form-control" style="display: block; {{#if errorEmail}} background-color: rgba(255, 0, 0, 0.295); {{/if}}" required>
      {{#if errorEmail}}<small class="text-muted form-text">{{errorEmail}}</small>{{/if}}

      <input type="password" placeholder="Password" name="password" id="password" class="mt-3 form-control" style="display: block; {{#if errorPassword}} background-color: rgba(255, 0, 0, 0.295); {{/if}}" required>
      {{#if errorPassword}}<small class="text-muted form-text">{{errorPassword}}</small>{{/if}}

      <button type="submit" class="btn btn-outline-secondary mt-5" style="display: block;">Sign in</button>
    </div>
  </form>
</div>